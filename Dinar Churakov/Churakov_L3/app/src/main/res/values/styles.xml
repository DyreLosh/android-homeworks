<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:layout_width">309dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:backgroundTint">@color/yellow_button</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/get_started_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">58dp</item>
        <item name="android:layout_marginEnd">58dp</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/yellow_button</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
</resources>